#!/usr/bin/env bash
# This script retrieves and displays DNS information for subdomains of a given domain.

# Check if both domain and subdomain parameters are provided
if [ $# -eq 0 ]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

domain="$1"
subdomain="$2"

# Define an array of subdomains to audit
subdomains=("www" "lb-01" "web-01" "web-02")

# If a subdomain is specified, audit only that subdomain
if [ -n "$subdomain" ]; then
    subdomains=("$subdomain")
fi

# Loop through the subdomains and retrieve DNS information
for sub in "${subdomains[@]}"; do
    result=$(dig +short "$sub.$domain")
    if [ -n "$result" ]; then
        record_type=$(dig +short -t "$sub.$domain" | awk '{print $4}')
        echo "The subdomain $sub is a $record_type record and points to $result"
    else
        echo "The subdomain $sub does not have a DNS record."
    fi
done
