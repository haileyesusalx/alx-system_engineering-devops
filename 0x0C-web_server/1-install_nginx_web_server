#!/usr/bin/env bash

# Install Nginx web server
apt-get update -y
apt-get install -y nginx

# Configure Nginx to return "Hello World!"
echo "server {
    listen 80;
    server_name _;

    location / {
        echo 'Hello World!';
    }
}" | tee /etc/nginx/sites-available/hello-world > /dev/null

# Create symbolic link to enable the site
ln -s /etc/nginx/sites-available/hello-world /etc/nginx/sites-enabled/

# Remove default symbolic link
rm /etc/nginx/sites-enabled/default

# Reload Nginx configuration
service nginx reload

# End of script
