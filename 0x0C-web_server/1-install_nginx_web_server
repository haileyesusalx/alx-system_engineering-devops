#!/usr/bin/env bash

# Update package list
apt-get -y update

# Install Nginx
apt-get -y install nginx

# Configure Nginx
echo "server {
    listen 80;
    server_name _;

    location / {
        echo 'Hello World!';
    }
}" > /etc/nginx/sites-available/default

# Reload Nginx configuration
service nginx reload

# Test Nginx
curl -sI 127.0.0.1 | grep "HTTP/1.1 200 OK"
